        <item name="colorOnSecondary">@color/ui_crib_colorOnSecondary</item>
    </style>

    <style name="UI_Crib_CommonAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="UI_Crib_CommonAppTheme.YesActionBar">
        <item name="windowActionBar">true</item>
