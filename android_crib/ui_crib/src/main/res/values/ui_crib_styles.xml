<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UI_Crib_CommonAppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ui_crib_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ui_crib_colorPrimaryDark</item>
